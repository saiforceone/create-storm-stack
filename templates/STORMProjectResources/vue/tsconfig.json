{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      // just because we can use emoji (but you should probably use the @storm alias instead)
      "\uD83C\uDF00/*": [
        "./storm_fe_vue/src/*"
      ],
      "@strm/*": [
        "./storm_fe_vue/src/*"
      ]
    }
  },
  "include": [
    "storm_fe_vue/src"
  ]
}